                        <Canvas x:Name="PlotArea">
                            <Polyline Points="{TemplateBinding Points}" Style="{TemplateBinding PolylineStyle}" Stroke="#FF0096F5"/>
                        </Canvas>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="LineStudentSubmitByDayDataPointStyle" TargetType="{x:Type chartingToolkit:LineDataPoint}">
            <Setter Property="Background" Value="#FF0096F5"/>
            <Setter Property="BorderBrush" Value="transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Width" Value="10"/>
            <Setter Property="Height" Value="10"/>
            <Setter Property="IndependentValueStringFormat" Value="{}{0:D}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type chartingToolkit:LineDataPoint}">
                        <Grid x:Name="Root" Opacity="0">
                            <Grid.ToolTip>
                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="日期: " />
                                        <TextBlock Text="{TemplateBinding FormattedIndependentValue}" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="提交数: " />
                                        <TextBlock Text="{TemplateBinding FormattedDependentValue}" />
                                    </StackPanel>
                                </StackPanel>
                            </Grid.ToolTip>
                            <Ellipse Fill="{TemplateBinding Background}" Stroke="{TemplateBinding BorderBrush}"/>
                            <Ellipse RenderTransformOrigin="0.661,0.321" Fill="#FF00AFF5"/>
                            <Ellipse x:Name="SelectionHighlight" Fill="Transparent" Opacity="0"/>
                            <Ellipse x:Name="MouseOverHighlight" Fill="Transparent" Opacity="0"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
